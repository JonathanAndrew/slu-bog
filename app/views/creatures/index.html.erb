<h1 class="col-lg-8, col-md-6, col-sm-12 title"><center><strong><u>Welcome to my Bog</u><strong><center></h1>

<div class="container">

	<% @creatures.each do |creature| %>

		<center><h2> <%= link_to creature.name, creature %> </h2></center>
		<center><p> -<%= creature.description %> </p></center>
		<center><p><%= link_to 'Edit', edit_creature_path(creature) %></p></center>
		<center><p><%= link_to 'Delete', creature_path(creature), method: :delete %></p></center>

	<% end %>
</div>